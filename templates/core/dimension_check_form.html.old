{% extends 'base.html' %}

{% block title %}Create Dimension Check{% endblock %}

{% block extra_css %}
<!-- Add Select2 CSS -->
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
<style>
    /* Select2 Custom Styles */
    .select2-container {
        width: 100% !important;
    }
    .select2-container--bootstrap-5 .select2-selection {
        min-height: 38px;
        border: 1px solid #dee2e6;
    }
    .select2-container--bootstrap-5 .select2-selection--single {
        padding-top: 4px;
    }

    .form-group {
        margin-bottom: 1rem;
    }
    .form-label {
        font-weight: 500;
    }
    .item-details {
        background-color: #f8f9fa;
        padding: 15px;
        border-radius: 5px;
        margin-bottom: 1rem;
    }
    .item-details p {
        margin-bottom: 0.5rem;
    }
    .item-details strong {
        color: #495057;
    }

    /* Radio Button Styles */
    .form-check {
        padding: 0.5rem 1rem;
        border: 1px solid #dee2e6;
        border-radius: 0.25rem;
        margin: 0.25rem;
        transition: all 0.2s ease-in-out;
    }
    .form-check:hover {
        background-color: #f8f9fa;
    }
    .form-check-input:checked + .form-check-label {
        font-weight: 500;
    }
    .form-check-input:checked {
        background-color: #0d6efd;
        border-color: #0d6efd;
    }
    .form-check-input {
        margin-top: 0.3em;
        margin-right: 0.5rem;
    }
    .gap-3 {
        gap: 0.5rem !important;
    }
</style>
{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h2 class="h4 mb-0">{{ action }} Dimension Check</h2>
                </div>

                <div class="card-body">
                    <form method="post" id="dimensionCheckForm">
                        {% csrf_token %}
                        
                        <!-- Item Selection -->
                        <div class="form-group">
                            <label for="item_select" class="form-label">Select Items</label>
                            <select name="selected_items" id="item_select" class="form-select" required multiple>
                                {% for item in log_items %}
                                <option value="{{ item.id }}" 
                                        data-project="{{ item.project_number }}"
                                        data-building="{{ item.building_name }}"
                                        data-designation="{{ item.log_designation }}"
                                        data-assembly="{{ item.assembly_mark }}"
                                        data-part="{{ item.part_mark }}"
                                        data-name="{{ item.name }}"
                                        data-profile="{{ item.profile }}"
                                        data-length="{{ item.length }}"
                                        data-remaining="{{ item.remaining_quantity }}">
                                    {{ item.log_designation }} - {{ item.assembly_mark }} - {{ item.part_mark }}
                                </option>
                                {% endfor %}
                            </select>
                        </div>

                        <!-- Selected Items Details -->
                        <div class="mt-3" id="selectedItemsContainer">
                            <h5>Selected Items</h5>
                            <div class="table-responsive">
                                <table class="table table-sm" id="selectedItemsTable" style="display: none;">
                                    <thead>
                                        <tr>
                                            <th>Log Designation</th>
                                            <th>Project</th>
                                            <th>Building</th>
                                            <th>Assembly Mark</th>
                                            <th>Part Mark</th>
                                            <th>Profile</th>
                                            <th>Length</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="form-label">Facility</label>
                                    <div class="d-flex flex-wrap gap-3">
                                        {% for facility in facilities %}
                                        <div class="form-check">
                                            <input type="radio" 
                                                   name="facility" 
                                                   id="facility_{{ facility.id }}" 
                                                   value="{{ facility.id }}" 
                                                   class="form-check-input facility-radio"
                                                   required>
                                            <label class="form-check-label" for="facility_{{ facility.id }}">
                                                {{ facility.name }}
                                            </label>
                                        </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="form-label">Team</label>
                                    <div id="teamsContainer" class="d-flex flex-wrap gap-3">
                                        <!-- Teams will be dynamically populated here -->
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="check_date" class="form-label">Check Date</label>
                                    <div class="input-group">
                                        <input type="date" name="check_date" id="check_date" class="form-control" required>
                                        <button type="button" class="btn btn-outline-secondary" id="setToday">Today</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary">Save Dimension Check</button>
                            <a href="{% url 'dimension_check_list' %}" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block extra_js %}
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script>
    $(document).ready(function() {
        // Initialize Select2 for item selection
        $('#item_select').select2({
            theme: 'bootstrap-5',
            placeholder: 'Search and select items...',
            allowClear: true,
            templateResult: formatItem,
            templateSelection: formatItem
        });

        // Handle facility change to update teams
        $('.facility-radio').change(function() {
            const facilityId = $(this).val();
            const teamsContainer = $('#teamsContainer');
            
            // Clear current options
            teamsContainer.empty();
            
            if (facilityId) {
                // Filter teams by facility
                {% for team in teams %}
                if ('{{ team.facility_id }}' === facilityId) {
                    teamsContainer.append(`
                        <div class="form-check">
                            <input type="radio" 
                                   name="team" 
                                   id="team_{{ team.id }}" 
                                   value="{{ team.id }}" 
                                   class="form-check-input"
                                   required>
                            <label class="form-check-label" for="team_{{ team.id }}">
                                {{ team.name }}
                            </label>
                        </div>
                    `);
                }
                {% endfor %}
            }
        });

        function formatItem(item) {
            if (!item.id) return item.text;
            const $option = $(item.element);
            const project = $option.data('project');
            const designation = $option.data('designation');
            const assembly = $option.data('assembly');
            const part = $option.data('part');
            const name = $option.data('name');
            const remaining = $option.data('remaining');
            
            return $(`
                <div>
                    <strong>[${project}]</strong> ${designation}<br>
                    <small class="text-muted">${assembly} - ${part} (${name}) - ${remaining} remaining</small>
                </div>
            `);
        }

        // Handle item selection changes
        $('#item_select').on('change', function() {
            const selectedOptions = $(this).find('option:selected');
            const tableBody = $('#selectedItemsTable tbody');
            tableBody.empty();

            if (selectedOptions.length > 0) {
                $('#selectedItemsTable').show();
                
                selectedOptions.each(function() {
                    const $option = $(this);
                    const designation = $option.data('designation');
                    const project = $option.data('project');
                    const building = $option.data('building');
                    const assembly = $option.data('assembly');
                    const part = $option.data('part');
                    const profile = $option.data('profile');
                    const length = $option.data('length');

                    const row = `
                        <tr>
                            <td>${designation}</td>
                            <td>${project}</td>
                            <td>${building}</td>
                            <td>${assembly}</td>
                            <td>${part}</td>
                            <td>${profile}</td>
                            <td>${length}</td>
                        </tr>
                    `;
                    tableBody.append(row);
                });
            } else {
                $('#selectedItemsTable').hide();
            }
        });

        // Set Today's Date
        $('#setToday').click(function() {
            const today = new Date().toISOString().split('T')[0];
            $('#check_date').val(today);
        });

        // Set today's date on load
        $('#setToday').trigger('click');

        // Form validation
        $('#dimensionCheckForm').on('submit', function(e) {
            const selectedItems = $('#item_select').val();
            if (!selectedItems || selectedItems.length === 0) {
                e.preventDefault();
                alert('Please select at least one item to check.');
                return false;
            }
            return true;
        });
    });
</script>
{% endblock %}
